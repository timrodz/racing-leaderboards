<.header>
  Listing Records
  <:actions>
    <.link patch={
      ~p"/games/#{@game_code}/records/new?date=#{NaiveDateTime.local_now() |> Date.to_string()}"
    }>
      <.button>New Record</.button>
    </.link>
  </:actions>
</.header>

<div class="space-y-4">
  <%= for {{game, date, circuit, car}, records} <- @grouped_records do %>
    <div class="space-y-1">
      <h2 class=" font-semibold"><%= date %></h2>
      <h3 class="text-xl">
        <%= RacingLeaderboardsWeb.Utils.Circuits.country_to_emoji(circuit.country) %> <%= circuit.name %>
      </h3>
      <h4 class="text-xl">üèéÔ∏è <%= car.name %></h4>
    </div>
    <div class="grid grid-cols-3 gap-2">
      <%= for c <- records do %>
        <div class="p-2 rounded bg-slate-100">
          <p><%= c.user.name %></p>
          <p class="font-mono"><%= c.time %></p>
        </div>
      <% end %>
    </div>
    <a
      class="inline-block p-2 bg-indigo-600 text-white rounded"
      href={
        ~p"/games/#{game}/records/new?date=#{date |> Date.to_string()}&circuit=#{circuit.id}&car=#{car.id}"
      }
    >
      Add new entry
    </a>
  <% end %>
</div>
