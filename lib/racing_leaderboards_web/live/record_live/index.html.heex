<.back navigate={~p"/games"}>Back to games</.back>

<.modal
  :if={@live_action in [:new, :edit]}
  id="record-modal"
  show
  on_cancel={JS.patch(~p"/games/#{@game_code}/records")}
>
  <.live_component
    module={RacingLeaderboardsWeb.RecordLive.FormComponent}
    id={@record.id || :new}
    title={@page_title}
    action={@live_action}
    record={@record}
    game_id={@game_id}
    patch={~p"/games/#{@game_code}/records"}
  />
</.modal>
